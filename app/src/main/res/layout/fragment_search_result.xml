<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchResultFragment">

    <HorizontalScrollView
        android:id="@+id/table"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/buttonBar">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="?android:colorPrimary">

            <TextView
                android:id="@+id/searchResultTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Result based on Lot#__  Category__  Period__  Keyword__"
                android:textStyle="bold"
                android:padding="8dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="4dp"
                android:maxLines="2"
                android:ellipsize="end" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="2dp"
                android:background="?colorSurface"
                android:paddingHorizontal="4dp">

                <Space
                    android:layout_width="45sp"
                    android:layout_height="match_parent"/>

                <TextView
                    android:id="@+id/textViewLot"
                    android:layout_width="45sp"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:text="Lot" />

                <TextView
                    android:id="@+id/textViewName"
                    android:layout_width="125sp"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:text="Name" />

                <TextView
                    android:id="@+id/viewButton"
                    android:layout_width="125sp"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:text="Period" />

                <TextView
                    android:id="@+id/textViewPeriod"
                    android:layout_width="125sp"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:text="Category" />

                <TextView
                    android:id="@+id/textViewDescription"
                    android:layout_width="200sp"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:text="Description" />

                <TextView
                    android:id="@+id/textViewImage"
                    android:layout_width="200sp"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:text="Image/Video Thumbnail" />

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>

    </HorizontalScrollView>

    <GridLayout
        android:id="@+id/buttonBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:alignmentMode="alignMargins"
        android:columnOrderPreserved="false"
        android:columnCount="3"
        android:rowCount="1"
        android:background="?colorSurface"
        android:elevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:id="@+id/buttonBack"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="5dp"
            android:backgroundTint="?android:colorPrimary"
            android:src="@drawable/all_screen_back"
            android:contentDescription="Back"/>

        <ImageButton
            android:id="@+id/buttonView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="5dp"
            android:backgroundTint="?android:colorPrimary"
            android:src="@drawable/main_screen_view"
            android:contentDescription="View"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_margin="5dp"/>

    </GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
